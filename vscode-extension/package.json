{
  "name": "pipelinex-vscode",
  "displayName": "PipelineX",
  "description": "Inline CI workflow optimization hints powered by PipelineX",
  "version": "2.1.0",
  "publisher": "mackeh",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Linters"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:pipelinex.runAnalysis",
    "onCommand:pipelinex.showHintDetails",
    "onLanguage:yaml"
  ],
  "contributes": {
    "commands": [
      {
        "command": "pipelinex.runAnalysis",
        "title": "PipelineX: Analyze Current Workflow"
      },
      {
        "command": "pipelinex.showHintDetails",
        "title": "PipelineX: Show Hint Details"
      },
      {
        "command": "pipelinex.clearHints",
        "title": "PipelineX: Clear Hints"
      }
    ],
    "configuration": {
      "title": "PipelineX",
      "properties": {
        "pipelinex.commandPath": {
          "type": "string",
          "default": "pipelinex",
          "markdownDescription": "Path to the `pipelinex` executable."
        },
        "pipelinex.autoAnalyzeOnSave": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Automatically analyze supported pipeline files when they are saved."
        },
        "pipelinex.autoAnalyzeOnOpen": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Automatically analyze supported pipeline files when they are opened."
        },
        "pipelinex.showCodeLens": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Show PipelineX hint summaries as code lenses."
        },
        "pipelinex.maxHints": {
          "type": "number",
          "default": 25,
          "minimum": 1,
          "maximum": 200,
          "markdownDescription": "Maximum number of hints to surface per file."
        },
        "pipelinex.severityThreshold": {
          "type": "string",
          "default": "medium",
          "enum": [
            "info",
            "low",
            "medium",
            "high",
            "critical"
          ],
          "markdownDescription": "Minimum severity level required for a finding to be shown inline."
        },
        "pipelinex.commandTimeoutMs": {
          "type": "number",
          "default": 120000,
          "minimum": 1000,
          "maximum": 600000,
          "markdownDescription": "Timeout for running `pipelinex analyze` (milliseconds)."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "tsc -noEmit -p ./",
    "vscode:prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.8.2"
  }
}
